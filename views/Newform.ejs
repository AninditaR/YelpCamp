            <input class="px-2" style="width: 350px;"  type="text" name ="name" placeholder="name">
        </div>
        <div class=" form-group">
            <input class="px-2" style="width: 350px;" type="text" name="image" placeholder="imageurl">
        </div>
        <div class="form-group">
            <input class="px-2" style="width: 350px;" type="text" name="description" placeholder="descriptions">
        </div>
        <div class= "form-group pb-3">
            <button class=" btn btn-primary  " style="width: 350px;" >Submit</button>
        </div>
        

    </form>
